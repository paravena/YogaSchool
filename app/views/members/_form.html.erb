<%= form_for(@member) do |f| %>
    <% if @member.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

          <ul>
            <% @member.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.hidden_field :picture, id: 'picture'  %>
    <table>
        <tr>
            <td>
                  <%= f.label :name %>
            </td>
            <td>
                  <%= f.text_field :name %>
            </td>
        </tr>
        <tr>
            <td>
                  <%= f.label :last_name %>
            </td>
            <td>
                  <%= f.text_field :last_name %>
            </td>
        </tr>
        <tr>
            <td>
                  <%= f.label :birth_date %>
            </td>
            <td>
                  <%= f.date_select :birth_date %>
            </td>
          </tr>
          <tr>
                <td>
                  <%= f.label :contact_phone %>
                </td>
                <td>
                  <%= f.text_field :contact_phone %>
                </td>
          </tr>
      <tr>
        <td>
          <%= f.label :email %>
        </td>
        <td>
          <%= f.text_field :email %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :address %>
        </td>
        <td>
          <%= f.text_field :address %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <%= f.submit class: 'btn-primary btn' %>
          <a href="#takeSnapModal" class="btn" data-toggle="modal"><%=t('label.take_picture')%></a>
        </td>
      </tr>
    </table>
<% end %>
<canvas id="canvas" width="270" height="320"></canvas>
<div id="takeSnapModal" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
      <h3>Take Snapshot</h3>
    </div>
    <div class="modal-body">
      <video id="video" width="320" height="270" autoplay></video>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button id="snap" href="#" class="btn btn-primary">Snap</button>
    </div>
</div>
